<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/netw_settings_right_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="false"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt1b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/network_settings"
        android:textSize="26sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="125dp"
        android:background="@color/custom_color"
        android:clickable="false" >

        <LinearLayout
            android:id="@+id/pr3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt2b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/wlan"
                android:textSize="26sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/txt3b"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/layout_bg"
                android:gravity="left"
                android:nextFocusDown="@+id/txt3b1"
                android:nextFocusUp="@+id/btn_setup_wizard_welcome_next"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:text="@string/select_an_available_wlan_network_"
                android:textAppearance="?android:attr/textAppearanceLarge"
               android:textColor="@android:color/white" /> 
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="125dp"
        android:layout_marginTop="10dp"
        android:background="@color/custom_color"
        android:clickable="false" >

        <LinearLayout
            android:id="@+id/pr31"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt2b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/lan_settings"
                android:textSize="26sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/txt3b1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/layout_bg"
                android:gravity="left"
                android:nextFocusDown="@+id/btn_setup_wizard_welcome_next"
                android:nextFocusUp="@+id/txt3b"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:paddingTop="15dp"
                android:text="@string/set_up_your_own_home_network_"
                android:textAppearance="?android:attr/textAppearanceLarge"
               android:textColor="@android:color/white" /> 
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>